            <string>var up = bind_check("walkUp");
var down = bind_check("walkDown");
var left = bind_check("walkLeft");
var right = bind_check("walkRight");

var pull = bind_check("pull");

//animations
if (up){
  sprite_index = spr_player_u;
  image_xscale = 1;
  dir = 1;
}
else if (down){
  sprite_index = spr_player_d;
  image_xscale = 1;
  dir = 3;
}
else if (right){
  sprite_index = spr_player_r;
  image_xscale = 1;
  dir = 0;
}
else if(left){
  sprite_index = spr_player_l;
  dir = 2;
}else{
  image_index = 0;
}

//walking and collision

hspd = (right - left) * spd;
vspd = (down - up) * spd;

/*if(!place_meeting(x + hspd, y + vspd, obj_collision)) {
/*    x += hspd;
    y += vspd;
} else {*/
    var mspd = spd;
    for(var i = 0; i &lt; mspd; i++) {
        //push
        if(pull) {
            if(place_meeting(x + sign(hspd), y, obj_push)) {
                mspd = spd/2;
                with(instance_place(x + sign(hspd), y, obj_push)) {
                    if(!place_meeting(x + sign(other.hspd), y, obj_collision)) x += sign(other.hspd);
                }
            }
            
            if(place_meeting(x, y + sign(vspd), obj_push)) {
                mspd = spd/2;
                with(instance_place(x, y + sign(vspd), obj_push)) {
                    if(!place_meeting(x, y + sign(other.vspd), obj_collision)) y += sign(other.vspd);
                }
            }
        }
        
        //movement
        if(!place_meeting(x + sign(hspd), y, obj_collision)) x += sign(hspd);
        if(!place_meeting(x, y + sign(vspd), obj_collision)) y += sign(vspd);
        
        //pull
        if(pull) {
            if(place_meeting(x - 2*sign(hspd), y, obj_push)) {
                mspd = spd/2;
                with(instance_place(x - 2*sign(hspd), y, obj_push)) {
                    if(!place_meeting(x + sign(other.hspd), y, obj_collision)) x += sign(other.hspd);
                }
            }
            
            if(place_meeting(x, y - 2*sign(vspd), obj_push)) {
                mspd = spd/2;
                with(instance_place(x, y - 2*sign(vspd), obj_push)) {
                    if(!place_meeting(x, y + sign(other.vspd), obj_collision)) y += sign(other.vspd);
                }
            }
        }
    }
//}



//interaction
var inst = -1;
switch (dir){
  case 0:
    inst = collision_rectangle(x,y-8,x+16,y+8,obj_interactable,0,0);
  break;
  case 1:
    inst = collision_rectangle(x-8,y-16,x+8,y,obj_interactable,0,0);
  break;
  case 2:
    inst = collision_rectangle(x-16,y-8,x,y+16,obj_interactable,0,0);
  break;
  case 3:
    inst = collision_rectangle(x-8,y,x+8,y+16,obj_interactable,0,0);
  break;
}

if (inst != -1){
  if (instance_exists(inst)){
    looking_inst = inst;
    if (bind_check_pressed('interact')){
      if (looking_inst.master != -1){
        with (looking_inst.master){
          event_user(0);
        }
      }
    }
  }else{
    looking_inst = -1;
  }
}



